<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/mobile_navigation"
  app:startDestination="@id/mainTabFragment">

  <fragment
    android:id="@+id/accountFragment"
    android:name="com.takusemba.jethub.account.AccountFragment"
    app:moduleName="@string/dynamic_module_account" />

  <fragment
    android:id="@+id/mainTabFragment"
    android:name="com.takusemba.jethub.ui.fragment.MainTabFragment"
    android:label="MainTabFragment">

    <action
      android:id="@+id/action_main_tab_to_account"
      app:destination="@id/accountFragment"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim"
      app:popEnterAnim="@anim/nav_default_pop_enter_anim"
      app:popExitAnim="@anim/nav_default_pop_exit_anim" />

  </fragment>

</navigation>